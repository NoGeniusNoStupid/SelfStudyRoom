@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>自习室管理系统</title>
    <!-- plugins:css -->
    <link href="/Content/Admin/vendors/iconfonts/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    
    <link rel="stylesheet" href="/Content/Admin/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/Content/Admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="/Content/Admin/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="/Content/Admin/images/logo.svg">
                            </div>
                            <h4>你好! 欢迎来到自习室管理系统</h4>
                            <h6 class="font-weight-light">请登录吧</h6>
                            <form class="pt-3" method="post" action="/Home/Login">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="账号/邮箱/手机号">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="密码">
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="#">登陆</a>
                                </div>
                               
                                
                                <div class="text-center mt-4 font-weight-light">
                                    没有账号? <a href="/Home/Register" class="text-primary">注册</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/Content/Admin/vendors/js/vendor.bundle.base.js"></script>
    <script src="/Content/Admin/vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="/Content/Admin/js/off-canvas.js"></script>
    <script src="/Content/Admin/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>

