@{
    ViewBag.Title = "HistoryManage";
    Layout = "~/Views/Shared/master.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            就座记录
        </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
               
                <li class="breadcrumb-item"><a href="/Seat/Manage">座位管理</a></li>
                <li class="breadcrumb-item active" aria-current="page">就座记录</li>
            </ol>
        </nav>
    </div>
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @*<h4 class="card-title">Bordered table</h4>
                        <p class="card-description">
                            Add class <code>.table-bordered</code>
                        </p>*@
                    <form method="post" action="/Seat/HistoryManage">
                        <div class="input-group">

                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input name="search" type="text" class="form-control bg-transparent border-0" placeholder="用户名/姓名/自习室">
                            <button type="submit" class="btn btn-gradient-success btn-fw">查询</button>

                        </div>
                    </form>
                    <br />
                    <br />
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    自习室名称
                                </th>
                                <th>
                                    座位编号
                                </th>
                                <th>
                                    用户账号
                                </th>
                                <th>
                                    用户
                                </th>
                                <th>
                                    开始时间
                                </th>
                                <th>
                                    结束时间
                                </th>
                                <th>
                                    状态
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                List<SelfStudyRoom.Models.SeatDetail> mlist = (List<SelfStudyRoom.Models.SeatDetail>)ViewData["List"];

                                foreach (var item in mlist)
                                {
                                    <tr>
                                        
                                        <td>@item.Seat.StuRoom.Name</td>
                                        <td>@item.Seat.SeatNo</td>
                                        <td>@item.UserInfo.StuNo</td>
                                        <td>@item.UserInfo.Name</td>
                                        <td>@item.StartTime</td>
                                        <td>@item.EndTime</td>
                                        <td>@item.State</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div style="float:right">@Html.Raw(ViewData["Bar"])</div>

                </div>
            </div>
        </div>

    </div>
</div>
