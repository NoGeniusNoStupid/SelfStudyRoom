@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/master.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            管理员管理
        </h3>
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">管理员管理</li>
            <li class="breadcrumb-item"><a href="/Admin/Add">添加管理员</a></li>
          
        </ol>
    </nav>
    </div>
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form method="post" action="/Admin/Manage">
                        <div class="input-group">

                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input name="search" type="text" class="form-control bg-transparent border-0" placeholder="用户名/姓名/电话">
                            <button type="submit" class="btn btn-gradient-success btn-fw">查询</button>

                        </div>
                    </form>
                    <br />
                    <br />
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    编号
                                </th>
                                <th>
                                    用户名
                                </th>
                                <th>
                                    姓名
                                </th>
                                <th>
                                    电话
                                </th>
                                <th>
                                    状态
                                </th>
                                <th>
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                List<SelfStudyRoom.Models.Admin> mlist = (List<SelfStudyRoom.Models.Admin>)ViewData["List"];

                                foreach (var item in mlist)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="@item.Image" class="mr-2" alt="image">
                                            @item.AdminName
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Tel</td>
                                        <td>@item.State</td>
                                        <td>
                                            <a href="/Admin/Edit/@item.Id" class="badge badge-gradient-danger">修改</a>
                                            <a href="/Admin/Delete/@item.Id" class="badge badge-gradient-dark" onclick="return confirm('确认要删除用户吗？')">删除</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>



                    <div style="float:right">@Html.Raw(ViewData["Bar"])</div>
                </div>
            </div>
        </div>

    </div>
</div>
